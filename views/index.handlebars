	<!-- Scrapped articles will go here -->
	<div class="container-fluid" class="parallax" id="articles">
		<div class="row">
			<div class="col-md-12">
				<ul>
				{{#each articles}}
					{{#unless this.saved}}
						<li id="scrapedArticleListItem">
							<div class="row">
								<div class="col-xs-3 col-md-3">
									<a href="#" class="thumbnail">
										<img src="{{this.picture}}" alt="article picture">
									</a>
								</div>
								<div class="col-xs-6 col-md-6" style="margin-top: 30px" >
									<a id="title" href={{this.link}}>{{this.title}}</a>
									<p id="description">{{this.description}}</p>
								</div>
								<div class="col-md-3 col-xs-3">
									<form class="form-horizontal" method="POST" action="/{{this._id}}" align="center">
										<button class="btn btn-default" id="saveArticle"  data-toggle="modal" data-target="#modal1" align="center" style="margin-top: 45px">Save Article</button>
									</form>
								</div>
							</div>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	</div>
</div>

<!-- Articles Scrapped Modal -->
